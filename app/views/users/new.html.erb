<script>
    $(document).ready(function () {
        $('select').material_select();
    });

</script>

<div class="container">
  <div class="row">
    <div class="col m12 offset-m0">
      <h5 class="black-text">Sign up</h5>

      <%= form_for @user do |f| %>
          <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this account from being saved:</h2>

                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>


          <div class="row">
            <div class="input-field col s12">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off" %>
              <% if @minimum_password_length %>
                  <span>(<%= @minimum_password_length %> characters minimum) </span>
              <% end %><br/>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.label :password_confirmation %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>
          </div>


          <div class="row">
            <div class="input-field col s6">
              <%= f.label :role %><br/>
              <%= f.select :role, User.roles.keys.map {|role| [role.titleize, role]} %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <%= f.label :first_name %><br/>
              <%= f.text_field :first_name, autofocus: true %>
            </div>

            <div class="input-field col s6">
              <%= f.label :last_name %><br/>
              <%= f.text_field :last_name, autofocus: true %>
            </div>
          </div>


          <div class="row">
            <div class="input-field col s6">
              <%= f.label :phone %><br/>
              <%= f.text_field :phone, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s12">
              <%= f.label :street %><br/>
              <%= f.text_field :street, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <%= f.label :city %><br/>
              <%= f.text_field :city, autofocus: true %>
            </div>

            <div class="input-field col s6">
              <%= f.label :state %><br/>
              <%= f.text_field :state, autofocus: true %>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <%= f.label :country %><br/>
              <%= f.text_field :country, autofocus: true %>
            </div>

            <div class="input-field col s6">
              <%= f.label :zip %><br/>
              <%= f.text_field :zip, autofocus: true %>
            </div>
          </div>


          <div class="btn waves-effect waves-light" type="submit" name="action">
            <%= f.submit "Sign up" %>
          </div>
      <% end %>

    </div>
  </div>
</div>
